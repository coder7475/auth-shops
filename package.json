{
  "name": "auth-shops",
  "version": "1.0.0",
  "description": "A monorepo for authentication and shopping system",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm -r --parallel start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "client:dev": "pnpm --filter frontend dev",
    "client:build": "pnpm --filter frontend build",
    "client:preview": "pnpm --filter frontend preview",
    "client:deploy": "pnpm --filter frontend deploy",
    "server:dev": "pnpm --filter server dev",
    "server:build": "pnpm --filter server build",
    "server:start": "pnpm --filter server start",
    "server:start:prod": "pnpm --filter server start:prod"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
