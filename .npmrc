# Enable shamefully-hoist to avoid issues with packages that don't work well with strict isolation
shamefully-hoist=true

# Enable workspace support
link-workspace-packages=true

# Prefer workspace packages over registry packages
prefer-workspace-packages=true

# Store pnpm files in node_modules/.pnpm
store-dir=node_modules/.pnpm

# Enable strict peer dependencies
strict-peer-dependencies=false

# Auto install peer dependencies
auto-install-peers=true

# Use hard links when possible for better performance
package-import-method=auto

# Save exact versions in package.json
save-exact=false
